<% @products.each do |product| %>
      <div class="row col-xs-offset-1">
        <p class="col-xs-2"><%= product.name %></p>
        <p class="col-xs-2"><%= product.description %></p>
        <p class="col-xs-2"><%= product.image_url %></p>
        <p class="col-xs-2"><%= product.colour %></p>
        <p class="col-xs-2"><%= product.price %></p>
      </div>
      <p><%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
</div>